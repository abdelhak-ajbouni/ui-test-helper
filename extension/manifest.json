{
  "manifest_version": 3,
  "name": "UI Test Helper",
  "version": "1.0.0",
  "description": "Generate testing queries for UI elements by inspecting them",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-inspector": {
      "suggested_key": {
        "default": "Alt+Shift+U",
        "mac": "Alt+Shift+U"
      },
      "description": "Toggle UI Test Helper inspector"
    }
  },
  "action": {
    "default_title": "UI Test Helper",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
